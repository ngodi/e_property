<div class="login-container">
   <div class="login">
      <div class="auth-actions">
          <div>
              <%= link_to "Sign Up", new_user_registration_path, class:""%>
          </div>
          <div class="active">
              <strong><%= link_to "Log in", new_session_path(@user) %></strong>
          </div>
          <div style="background-color: skyblue">
              <%= link_to user_facebook_omniauth_authorize_path, class: "text-white", method: :post do %>
                  <i class="fab fa-facebook"></i>&nbsp;Login
              <% end %>
          </div>
      </div>
      <br><br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-input" %>
          </div>

          <div class="field form-group">
            <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-input" %>
          </div>

         <div class="auth-options">
             <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>REMEMBER ME
                </div>
             <% end %>
             <%= link_to "FORGOT PASSWORD?", new_password_path(resource_name) %>
         </div>

          <div class="actions">
            <%= f.submit "LOG IN", class: "auth-button" %>
          </div>
        <% end %>
    </div>
</div>
