<div class="row">
    <div class="col-md-12 mx-auto">

        <div class="panel panel-default">
            <div class="panel-heading">Your conversations</div>
            <div class="panel-body">
                <div class="container">
                  <% if !@conversations.empty? %>
                      <% @conversations.each do |conversation| %>
                        <% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %>
                        <%= link_to conversation_messages_path(conversation) do %>
                            <div class="row conversation">
                              <div class="col-md-2">
                                <%= image_tag avatar_url(other), class: "img-circle image-small" %>
                              </div>
                              <div class="col-md-2">
                                <%= other.fullname %><br>
                                <%= conversation.messages.last.message_time if !conversation.messages %>
                              </div>
                              <div class="col-md-8">
                                <%= conversation.messages.last.content if !conversation.messages %>
                              </div>
                            </div>
                        <% end %>
                    <% end %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>